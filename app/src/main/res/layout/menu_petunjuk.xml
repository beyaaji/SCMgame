<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPetunjuk">

    <ImageView
        android:id="@+id/gambarPetunjuk"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/petunjuk1" />

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tombolprev"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="22dp"
            android:onClick="prev"
            android:src="@drawable/tombol_back" />

        <ImageView
            android:id="@+id/tombolBack"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:onClick="menuAwal"
            android:src="@drawable/tombol_kembali_aturan" />

        <ImageView
            android:id="@+id/tombolnext"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="22dp"
            android:onClick="next"
            android:src="@drawable/tombol_next" />

    </LinearLayout>


</RelativeLayout>