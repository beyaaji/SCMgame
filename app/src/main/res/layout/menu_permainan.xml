<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPermainan">

    <ImageView
        android:id="@+id/gambarPermainan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/permainan" />

    <LinearLayout
        android:id="@+id/l_baris1"
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="376dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/R_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="126dp"
                android:layout_marginTop="25dp">

            </ImageView>

            <ImageView
                android:id="@+id/N_R_1"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/R_1" />

            <ImageView
                android:id="@+id/R_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="111dp" />

            <ImageView
                android:id="@+id/N_R_2"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/R_2"
                android:layout_alignParentTop="true"
                android:layout_marginTop="73dp" />

            <ImageView
                android:id="@+id/R_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="97dp"
                android:layout_marginTop="101dp" />

            <ImageView
                android:id="@+id/N_R_3"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_3"
                android:layout_alignStart="@+id/R_3"
                android:layout_marginBottom="-101dp" />

            <ImageView
                android:id="@+id/R_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/R_3"
                android:layout_marginEnd="113dp" />

            <ImageView
                android:id="@+id/N_R_4"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_2"
                android:layout_alignStart="@+id/R_4"
                android:layout_marginBottom="-111dp" />

            <ImageView
                android:id="@+id/R_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="97dp"
                android:layout_toEndOf="@+id/R_3" />

            <ImageView
                android:id="@+id/N_R_5"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_5"
                android:layout_alignEnd="@+id/R_1" />

            <ImageView
                android:id="@+id/R_6"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignEnd="@+id/N_R_4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="28dp" />

            <ImageView
                android:id="@+id/N_R_6"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_6"
                android:layout_alignStart="@+id/R_4" />

            <ImageView
                android:id="@+id/R_7"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/R_2"
                android:layout_marginEnd="12dp" />

            <ImageView
                android:id="@+id/N_R_7"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/R_2"
                android:layout_alignStart="@+id/R_7" />

            <ImageView
                android:id="@+id/S_1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/R_3"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/N_S_1"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="-101dp" />

            <ImageView
                android:id="@+id/S_2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/N_R_3"
                android:layout_alignParentStart="true"
                android:layout_marginStart="26dp" />

            <ImageView
                android:id="@+id/N_S_2"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignTop="@+id/R_1"
                android:layout_toEndOf="@+id/R_2" />

            <ImageView
                android:id="@+id/S_3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/R_5"
                android:layout_marginEnd="146dp" />

            <ImageView
                android:id="@+id/N_S_3"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_5"
                android:layout_toStartOf="@+id/R_4" />

            <ImageView
                android:id="@+id/S_4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_above="@+id/N_R_6"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/N_S_4"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_alignBottom="@+id/R_7"
                android:layout_alignStart="@+id/S_2" />

            <ImageView
                android:id="@+id/S_5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/R_6"
                android:layout_toEndOf="@+id/N_R_1" />

            <ImageView
                android:id="@+id/N_S_5"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_above="@+id/R_6"
                android:layout_toEndOf="@+id/R_1" />

        </RelativeLayout>
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="119dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tombolBack"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:layout_marginEnd="2dp"
            android:onClick="menuAwal"
            android:src="@drawable/tombol_back"
            />

    </LinearLayout>

    <!--<LinearLayout-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_marginEnd="42dp"-->
    <!--android:layout_marginTop="27dp">-->

    <!--<ImageView-->
    <!--android:layout_width="68dp"-->
    <!--android:layout_height="34dp"-->
    <!--android:src="@drawable/stopwatch" />-->

    <!--</LinearLayout>-->
    <TextView
        android:id="@+id/countdowntimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="44dp"
        android:layout_marginTop="72dp"
        android:textSize="20dp"
        tools:text="05:00" />

    <TextView
        android:id="@+id/skorpemain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="54dp"
        android:text="0"
        android:textSize="30dp" />

    <Button
        android:id="@+id/countdownbutton"
        android:layout_width="99dp"
        android:layout_height="61dp"
        android:layout_above="@+id/line1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:text="Pause" />
    <Button
        android:id="@+id/toko1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:alpha="0.0"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="55dp"
        />

    <TextView
        android:id="@+id/pengguna"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/toko1"
        android:layout_alignEnd="@+id/countdowntimer"
        android:layout_marginBottom="-50dp"
        android:layout_marginEnd="-15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <RelativeLayout
        android:id="@+id/dialog"
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="142dp"
        android:background="@drawable/dialog_input_nama"
        android:alpha="0.0" >

        <TextView
            android:id="@+id/teks1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:text="Hai, Selamat Datang Di"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teks2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks1"
            android:layout_centerHorizontal="true"
            android:maxWidth="170dp"
            android:text="Salt Dash"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/teks3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/teks2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Masukkan Namamu :"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/inputNama"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="81dp"
            android:hint="Namamu"
            android:inputType="textCapSentences"
            android:maxLength="5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/teksError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/inputNama"
            android:layout_below="@+id/inputNama"
            android:layout_marginStart="4dp"
            android:textColor="@color/error"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/simpan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="39dp"
            android:text="SIMPAN"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/batal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/teks1"
            android:layout_alignTop="@+id/simpan"
            android:text="BATAL"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>